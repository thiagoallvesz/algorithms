algoritmo "valores"
// Função :
// Autor :
// Data : 04/11/2021
// Seção de Declarações 
var
   N1, N2: Inteiro
   M: Real
inicio
      Escreva("Digite o primeiro valor: ")
      Leia(N1)
      Escreva("Digite o segundo valor: ")
      Leia(N2)
      M <- (N1 + N2) / 2
      Escreval("A média entre os valores ", N1, " e", N2, " é igual a ", M, " :)")
fimalgoritmo
